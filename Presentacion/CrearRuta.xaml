<Window x:Class="IPO1_AgenciadeViajes.CrearRuta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPO1_AgenciadeViajes"
        mc:Ignorable="d"
        Title="CrearRuta" Height="575.6" Width="937.6">
    <Grid Margin="0,0,-6.4,1" MouseUp="mostrarCoordenadas">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128*"/>
            <ColumnDefinition Width="341*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="349*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Left" Height="450" Margin="0,-31,0,0" VerticalAlignment="Top" Width="800" Grid.ColumnSpan="2">
            <Label x:Name="lblInformacionCrearRuta" Content="Aquí puede diseñar su propia ruta como desee." HorizontalAlignment="Left" Height="55" Margin="18,42,0,0" VerticalAlignment="Top" Width="459" FontSize="16"/>
        </Grid>
        <Image Source="https://cr00.epimg.net/radio/imagenes/2018/05/28/tecnologia/1527526175_206265_1527526294_noticia_normal.jpg" Grid.ColumnSpan="2" Margin="10,-13,262.6,40.6" Grid.RowSpan="2"/>
        <Label x:Name="lblHoraInicioCrearRuta" Content="Hora de inicio:" HorizontalAlignment="Left" Height="41" Margin="166,454,0,0" VerticalAlignment="Top" Width="117" Grid.RowSpan="2" Grid.ColumnSpan="2" FontSize="16"/>
        <Label x:Name="lblHoraFinCrearRuta" Content="Hora de fin:" HorizontalAlignment="Left" Height="32" Margin="166,30.6,0,0" VerticalAlignment="Top" Width="103" Grid.Row="1" Grid.ColumnSpan="2" FontSize="16"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="20" Margin="53,10.6,0,0" Grid.Row="1" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="73"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="20" Margin="53,40.6,0,0" Grid.Row="1" TextWrapping="Wrap" Text="&#xA;" VerticalAlignment="Top" Width="73"/>
        <Image x:Name="imgIdioma" HorizontalAlignment="Left" Margin="14,26.6,0,28.6" VerticalAlignment="Center" Source="/Recursos/Imagenes/spain.png" Height="36" Width="60" Grid.Row="1"/>
        <ComboBox x:Name="cbIdiomas" HorizontalAlignment="Stretch" Margin="64,34.6,146,34.6" VerticalAlignment="Center" Opacity="0.6" SelectedIndex="0" Background="Black" Height="22" Grid.Row="1" RenderTransformOrigin="-0.148,0.4" >
            <ComboBoxItem x:Name="cbItem1" Content="ES"/>
            <ComboBoxItem x:Name="cbItem2" Content="EN"/>
        </ComboBox>
        <Button x:Name="btnCancelarCrearRuta" HorizontalAlignment="Center" Margin="419,7.6,160.6,0" FontSize="16" Content="Cancelar" Grid.Column="1" Height="32" VerticalAlignment="Top" Width="102" RenderTransformOrigin="0.452,-3.352" Grid.Row="1" />
        <Button x:Name="btnGuardarCrearRuta" HorizontalAlignment="Center" Margin="259,7.6,322.6,0" FontSize="16" Content="Guardar" Height="32" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.452,-3.352" Grid.Row="1" Grid.Column="1" />
        <Button x:Name="btnSalir" ToolTip="Salir" Grid.Column="1" Margin="625,10,10.6,418.4" RenderTransformOrigin="0.5,0.707" Click="btnSalir_Click">
            <Image Source="/Recursos/Imagenes/salir_c.png" RenderTransformOrigin="5.078,0.781" />
        </Button>
        <Label x:Name="lblEstado" Content="Estado de aplicación" Margin="0,62.6,9.6,-1.4" Grid.Row="1" Background="White" Opacity="0.7" Height="30" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
