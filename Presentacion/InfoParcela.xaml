<Window x:Class="IPO1_AgenciadeViajes.InfoParcela"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPO1_AgenciadeViajes"
        mc:Ignorable="d"
        Title="Parcela" Height="782.773" Width="592.4">
    <Grid Margin="0,0,-0.4,-3.8">
        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="608*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="42*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="285*"/>
            <ColumnDefinition Width="216*"/>
            <ColumnDefinition Width="76*"/>
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Left" Margin="0,-26,0,0" VerticalAlignment="Top" Width="592" Height="783" Grid.ColumnSpan="4" Grid.RowSpan="5">
            <TextBox x:Name="titparcela" HorizontalAlignment="Left" Margin="130,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" Height="31" BorderBrush="White"/>
            <Image x:Name="Img_parcela" HorizontalAlignment="Left" Height="139" Margin="417,112,0,0" VerticalAlignment="Top" Width="149"/>
            <TextBox x:Name="txtprecio" HorizontalAlignment="Left" Margin="33,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="233" BorderBrush="{x:Null}" Height="42"/>
            <TextBox x:Name="txtUbicParcela" HorizontalAlignment="Left" Margin="26,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" BorderBrush="{x:Null}" Height="114"/>
            <TextBox x:Name="txtServicparcela" HorizontalAlignment="Left" Margin="39,400,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="227" BorderBrush="{x:Null}" Height="135"/>
            <TextBox x:Name="disp_parcela" HorizontalAlignment="Left" Margin="220,553,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="227" BorderBrush="{x:Null}" Height="24"/>
        </Grid>
        <Label x:Name="lblTituloParcela" Content="Parcela" HorizontalAlignment="Left" VerticalAlignment="Top" Height="56" Width="96" Margin="8,27,0,0" FontSize="26" Grid.Column="1" Grid.RowSpan="2"/>
        <Label x:Name="lblPrecioParcela" Content="Precio por noche:" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="10,23,0,0" FontSize="22" Height="40" Width="179" Grid.Row="1"/>
        <Label x:Name="lblUbicacionParcela" Content="Ubicación:" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="10,115,0,0" FontSize="22" Height="40" Width="111" Grid.Row="1"/>
        <Label x:Name="lblServiciosParcela" Content="Servicios" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="8,0,0,0" FontSize="22" Height="40" Width="94" Grid.Row="1"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Height="43" Margin="6,561,0,0" VerticalAlignment="Top" Width="188" FontSize="16" Grid.Row="1"/>
        <DatePicker Grid.Column="2" HorizontalAlignment="Center" Height="43" Margin="0,561,0,0" VerticalAlignment="Top" Width="188" FontSize="16" Grid.Row="1"/>
        <Label x:Name="lblFechaInicioParcela" Content="Fecha de inicio:" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15,0,0,61" Grid.Column="1" Width="153" FontSize="16" Height="38" RenderTransformOrigin="0.5,0.5" Grid.Row="1">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.382"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.393"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="lblFechaFinParcela" Content="Fecha de fin:" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="32,0,0,63" Grid.Column="2" Width="114" FontSize="16" Height="38" RenderTransformOrigin="0.5,0.5" Grid.Row="1">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.382"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.393"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="btnCancelarParcela" HorizontalAlignment="Left" Margin="95,15,0,0" FontSize="16" Content="Cancelar" Grid.Column="2" Height="50" VerticalAlignment="Top" Width="102" RenderTransformOrigin="0.452,-3.352" Grid.Row="3" />
        <Button x:Name="btnReservarParcela" HorizontalAlignment="Left" Margin="141,15,0,1" FontSize="16" Content="Reservar" Width="100" RenderTransformOrigin="0.452,-3.352" Grid.Column="1" Grid.Row="3" Click="ReservarParcela_Click" />
        <Image x:Name="imgIdioma" HorizontalAlignment="Left" Margin="149,-6,0,0" VerticalAlignment="Top" Source="/Recursos/Imagenes/spain.png" Height="39" Width="40" RenderTransformOrigin="0.572,1.906" Grid.Column="2"/>
        <ComboBox x:Name="cbIdiomas" Margin="193,2,3,0" VerticalAlignment="Top" Opacity="0.6" SelectedIndex="0" Background="Black" Height="27" Grid.Column="2" RenderTransformOrigin="0.077,0.142" >
            <ComboBoxItem x:Name="cbItem1" Content="ES"/>
            <ComboBoxItem x:Name="cbItem2" Content="EN"/>
        </ComboBox>
        <Button x:Name="btnSalir" ToolTip="Salir" Grid.Column="3" Margin="39,0,11,10" RenderTransformOrigin="0.5,0.707" Click="btnSalir_Click">
            <Image Source="/Recursos/Imagenes/salir_c.png" RenderTransformOrigin="5.078,0.781" />
        </Button>
        <Label x:Name="lblDispparc" Content="{DynamicResource lblDisponibilidad}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,474,0,0" FontSize="22" Height="40" Width="147" Grid.Row="1" Grid.Column="1"/>

    </Grid>
</Window>
