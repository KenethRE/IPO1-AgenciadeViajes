<Window x:Class="IPO1_AgenciadeViajes.InfoPromocion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPO1_AgenciadeViajes"
        mc:Ignorable="d"
        Title="Promocion" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="251*"/>
            <RowDefinition Height="63*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="140*"/>
            <ColumnDefinition Width="583*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Promoción" HorizontalAlignment="Left" VerticalAlignment="Top" Height="60" Width="314" Margin="7.6,32,0,0" FontSize="26" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label x:Name="lblFotosPromocion" Content="Fotos" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9.6,23.4,0,0" FontSize="22" Height="43" Width="314" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button x:Name="btnCancelarPromocion" HorizontalAlignment="Center" Margin="477.6,198.525,22.8,0" FontSize="16" Content="Cancelar" Height="53" VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.452,-3.352" Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" />
        <Button x:Name="btnDarPromocion" HorizontalAlignment="Center" Margin="29.6,198.525,556.8,0" FontSize="16" Content="Dar de Alta/Baja" Height="53" VerticalAlignment="Top" Width="136" RenderTransformOrigin="0.452,-3.352" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Click="Button_Click" />
        <Image x:Name="imgIdioma" HorizontalAlignment="Left" Margin="440.6,-1,0,6.2" VerticalAlignment="Center" Source="/Recursos/Imagenes/spain.png" Height="42" Width="56" RenderTransformOrigin="0.572,1.906" Grid.Column="2"/>
        <ComboBox x:Name="cbIdiomas" Margin="505.6,9,22.8,10.2" VerticalAlignment="Center" Opacity="0.6" SelectedIndex="0" Background="Black" Height="28" RenderTransformOrigin="0.077,0.142" Grid.Column="2" >
            <ComboBoxItem x:Name="cbItem1" Content="ES"/>
            <ComboBoxItem x:Name="cbItem2" Content="EN"/>
        </ComboBox>
        <Label Content="Descripción" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="9.6,0,0,229.8" Width="216" FontSize="16" Height="54" RenderTransformOrigin="0.5,0.5" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.492"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.393"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="btnModificarPromocion" HorizontalAlignment="Center" Margin="68.6,198.525,333.8,0" FontSize="16" Content="Modificar información" Height="53" VerticalAlignment="Top" Width="180" RenderTransformOrigin="0.452,-3.352" Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" Click="Button_Click_1" />
        <Button x:Name="btnGuardarPromocion" HorizontalAlignment="Right" Margin="0,198.525,143.8,0" FontSize="16" Content="Guardar cambios" Height="53" VerticalAlignment="Top" Width="149" RenderTransformOrigin="0.452,-3.352" Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" />
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="102" Margin="9.6,66.4,0,0" Grid.Row="2" VerticalAlignment="Top" Width="122" Source="/Recursos/Imagenes/icono_imagen.png" />
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="122" Margin="115.6,66.4,0,0" Grid.Row="2" VerticalAlignment="Top" Width="112" Source="/Recursos/Imagenes/icono_imagen.png" Grid.ColumnSpan="2" />
        <Button x:Name="btnSalir" ToolTip="Salir" Grid.Column="3" Margin="8.2,0,9.6,10.2" RenderTransformOrigin="0.5,0.707" Click="btnSalir_Click">
            <Image Source="/Recursos/Imagenes/salir_c.png" RenderTransformOrigin="5.078,0.781" />
        </Button>
        <Label x:Name="lblEstado" Content="Estado de aplicación" Margin="0,33.2,-0.4,0" Grid.Row="3" Background="White" Opacity="0.7" Height="30" Grid.ColumnSpan="4"/>
    </Grid>
</Window>
