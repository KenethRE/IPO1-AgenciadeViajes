            </MenuItem>
            <MenuItem Header="Ayuda" FontSize="14">
                <MenuItem x:Name="miAcercaDe" Header="Acerca de..." />
            </MenuItem>
        </Menu>
        <Grid>
            <TabControl x:Name="tcPestanas" Margin="0,29,-0.4,0">
                <TabItem Header="Monitores">
                    <Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Parcelas">
                    <Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Cabañas">
                    <Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Actividades">
                    <Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Historial de actividades">
                    <Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Promociones">
                    <Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
